{
  "extends": "@repo/typescript-config/nextjs",
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noEmit": true
  },
  "include": [
    ".eslintrc.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "src/env.mjs",
    "next.config.mjs",
    "prettier.config.mjs"
  ],
  "exclude": ["node_modules"]
}
